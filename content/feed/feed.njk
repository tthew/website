---
# Metadata comes from _data/metadata.js
permalink: /feed/feed.xml
pagination:
  data: words
  size: 10

eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="pretty-atom-feed.xsl" type="text/xsl"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:base="{{ metadata.language }}">
  <title>@tthew words</title>
  <subtitle>{{ metadata.description }}.</subtitle>
  <link href="{{ permalink | htmlBaseUrl(metadata.url) }}" rel="self" />
  <link href="{{ metadata.url | addPathPrefixToFullUrl }}" />
  <updated>{{
    words | getNewestWordsDate | toDate | dateToRfc3339
  }}</updated>
  <id>{{ metadata.url }}</id>
  <author>
    <name>{{ metadata.author.name }}</name>
    <email>{{ metadata.author.email }}</email>
  </author>
  {%- for post in words  %}
{% set absolutePostUrl %}{% if post.rssOnly !== true %}{{ metadata.url }}/words/{{ post.slug }}{% endif %}{% endset %}
{% set id %}{% if post.rssOnly === true %}{{ post.slug }}{% else %}{{ absolutePostUrl}}{% endif %}{% endset %}
  <entry>
    <title>{{ post.title }}</title>
    {% if absolutePostUrl %}<link href="{{ absolutePostUrl }}" />{% endif %}
		<updated>{{ post.date | toDate | dateToRfc3339 }}</updated>
    <id>{{ id }}</id>
    <content
      type="html"
      >
      {{ post.body | markdown | transformWithHtmlBase(absolutePostUrl, post.url) }}

      &lt;hr /&gt;
  

      &lt;p&gt;
        Reply via:
        

        &lt;a
          href=&quot;mailto:hallo@tthew.berlin?subject=Re:%20{{ absolutePostUrl }}&quot;
          &gt;Email&lt;/a
        &gt;
        :: &lt;a href=&quot;https://techhub.social/@tthew&quot;&gt;Mastodon&lt;/a&gt; ::

        &lt;a href=&quot;https://ma.tthew.berlin/contact&quot;&gt;Website&lt;/a&gt;
      &lt;/p&gt;

      </content
    >
  </entry>
  {%- endfor %}
</feed>
