}

.skills {
flex-wrap: wrap;
}

@media screen and (min-width: 800px) {
.skills {
flex-wrap: nowrap;
}

.skills > * {
flex-basis: 50%;
}
}

.skills ul {
list-style: none;
padding: 0;
display: flex;
flex-wrap: wrap;
gap: var(--space-s);
}

.skills ul li {
display: flex;
background: hsl(230, 1%, 98%);
max-width: 150px;
padding: var(--space-2xs);
border-radius: var(--space-2xs);
}

.with-sidebar {
display: flex;
flex-wrap: wrap;
gap: var(--space-l);

}

.with-sidebar > :first-child {
flex-grow: 1;
}

.with-sidebar > :last-child {
flex-basis: 0;
flex-grow: 999;
min-inline-size: 40%;
}

{% endcss %}

