{% css %}

main {
padding-top: var(--space-l);
display: flex;
flex-direction: column;
align-items: center;
flex: 1 0 100%;
}

main > * {
max-width: 80ch;
}

img {
border-radius: 50%;
max-width: 400px;
}

.columns {
display: flex;
align-items: flex-start;
gap: var(--space-l);
}

hr {
border: 0;
height: 1px
}

figure {
display: flex;
flex-direction: column;
row-gap: var(--space-s);
align-items: center;
}

figure figcaption {
font-style: italic;
}

.main-flow {
display: flex;
flex-direction: column;
row-gap: var(--space-l);
padding: 0 var(--space-s);
padding-bottom: var(--space-2xl);
}

.callout {
text-align: center;
background: hsl(230, 1%, 98%);
padding: var(--space-s);
font-weight: 400;
color: #555;
--deg: 532;

