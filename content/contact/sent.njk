{% css %}
@layer page {
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		min-height: calc(100vh - var(--header-height));
		flex: 1 0 100%;
		max-width: 100%;
		padding: 0;
	}

	.with-sidebar {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-xl);
        align-items: center;
        justify-content: center;
        flex: 1;
    }
    
    .with-sidebar > :last-child {
        flex-basis: 50%;
        flex-grow: 1;
    }
    
    .with-sidebar > :first-child {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-basis: 0;
        flex-grow: 999;
        min-inline-size: 45%;
    }
}
{% endcss %}



